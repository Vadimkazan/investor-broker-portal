{
  "tests": [
    {
      "name": "Получение списка пользователей",
      "method": "GET",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "Создание нового пользователя",
      "method": "POST",
      "path": "/",
      "body": {
        "email": "unique_test_user_{{timestamp}}@example.com",
        "name": "Test User",
        "role": "investor"
      },
      "expectedStatus": 201
    },
    {
      "name": "Обновление пользователя",
      "method": "PUT",
      "path": "/",
      "body": {
        "id": 1,
        "email": "updated@example.com",
        "name": "Updated Name",
        "role": "broker"
      },
      "expectedStatus": 200
    }
  ]
}